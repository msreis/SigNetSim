### Beginning of SigNetSim configuration

# Configure the media dir
Alias /signetsim/media/ /home/labestiol/Work/code/SigNetSim/data/media/
<Directory /home/labestiol/Work/code/SigNetSim/data/media>
    # Apache 2.4
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>

    # Apache 2.2
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</Directory>

# Configure the static dir
Alias /signetsim/static/ /home/labestiol/Work/code/SigNetSim/static/
<Directory /home/labestiol/Work/code/SigNetSim/static>
    # Apache 2.4
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>

    # Apache 2.2
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</Directory>

# Configuration WSGI
WSGIDaemonProcess signetsim python-path=/usr/local/lib/python2.7/site-packages
WSGIScriptAlias /signetsim /home/labestiol/Work/code/SigNetSim/settings/wsgi.py
WSGIApplicationGroup %{GLOBAL}
<Location /signetsim>
    WSGIProcessGroup signetsim
</Location>

# Giving access to the WSGI file
<Directory /home/labestiol/Work/code/SigNetSim/settings>
<Files wsgi.py>
    Options Indexes FollowSymLinks
    # Apache 2.4
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>

    # Apache 2.2
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</Files>
</Directory>

### End of SigNetSim configuration
