EXEC_DIR=$PWD
DIR=`dirname $PWD/$0`
INSTALL_DIR=`dirname $DIR`

sudo chgrp -R www-data $INSTALL_DIR/data/
sudo chmod -R 664 $INSTALL_DIR/data/

sudo find $INSTALL_DIR/data/ -type d  -exec chmod 775 {} \;


sudo mv $DIR/signetsim.conf /etc/apache2/sites-available/
sudo cd /etc/apache2/sites-enabled/
sudo a2dissite *
sudo a2enmod wsgi
sudo a2ensite signetsim
sudo service apache2 reload
